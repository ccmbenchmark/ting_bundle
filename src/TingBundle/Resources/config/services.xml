<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ting" class="CCMBenchmark\TingBundle\Repository\RepositoryFactory">
            <argument type="service" id="ting.connectionpool" />
            <argument type="service" id="ting.metadatarepository" />
            <argument type="service" id="ting.queryfactory" />
            <argument type="service" id="ting.collectionfactory" />
            <argument type="service" id="ting.unitofwork" />
            <argument type="service" id="ting.cache" />
            <argument type="service" id="ting.serializerfactory" />
            <call method="loadMetadata">
                <argument>%kernel.cache_dir%</argument>
                <argument>%ting.cache_file%</argument>
                <argument>%ting.repositories%</argument>
                <argument type="service" id="file_locator" />
                <argument type="service" id="ting.configuration_resolver" on-invalid="null" />
            </call>
        </service>

        <service id="ting.metadatarepository" class="CCMBenchmark\Ting\MetadataRepository">
            <argument type="service" id="ting.serializerfactory" />
        </service>

        <service id="ting.serializerfactory" class="CCMBenchmark\Ting\Serializer\SerializerFactory">
        </service>

        <service id="ting.queryfactory" class="CCMBenchmark\Ting\Query\QueryFactory">
        </service>

        <service id="ting.driverlogger" synthetic="true">
        </service>

        <service id="ting.connectionpool" class="CCMBenchmark\Ting\ConnectionPool">
            <call method="setConfig">
                <argument>%ting.connections%</argument>
            </call>
        </service>

        <service id="ting.unitofwork" class="CCMBenchmark\Ting\UnitOfWork">
            <argument type="service" id="ting.connectionpool" />
            <argument type="service" id="ting.metadatarepository" />
            <argument type="service" id="ting.queryfactory" />
        </service>

        <service id="ting.hydrator" class="CCMBenchmark\Ting\Repository\Hydrator" shared="false">
            <call method="setMetadataRepository">
                <argument type="service" id="ting.metadatarepository" />
            </call>
            <call method="setUnitOfWork">
                <argument type="service" id="ting.unitofwork" />
            </call>
        </service>

        <service id="ting.hydrator_single_object" class="CCMBenchmark\Ting\Repository\HydratorSingleObject" shared="false">
            <call method="setMetadataRepository">
                <argument type="service" id="ting.metadatarepository" />
            </call>
            <call method="setUnitOfWork">
                <argument type="service" id="ting.unitofwork" />
            </call>
        </service>

        <service id="ting.collectionfactory" class="CCMBenchmark\Ting\Repository\CollectionFactory">
            <argument type="service" id="ting.metadatarepository" />
            <argument type="service" id="ting.unitofwork" />
            <argument type="service" id="ting.hydrator" />
        </service>

        <service id="ting.cache" class="CCMBenchmark\Ting\Cache\Cache">
        </service>

        <service id="ting.driver_data_collector" class="CCMBenchmark\TingBundle\DataCollector\TingDriverDataCollector">
            <tag name="data_collector" template="TingBundle:Collector:driverCollector" id="ting.driver" />
        </service>

        <service id="ting.cache_data_collector" class="CCMBenchmark\TingBundle\DataCollector\TingCacheDataCollector">
            <tag name="data_collector" template="TingBundle:Collector:cacheCollector" id="ting.cache" />
        </service>

        <service id="ting.metadata_warmer" class="CCMBenchmark\TingBundle\Cache\MetadataWarmer">
            <argument type="service" id="service_container" />
            <tag name="kernel.cache_warmer" priority="0" />
        </service>
    </services>
</container>
